form(action='#', method='get').setting-form.wrapper   
    ul.setting-form__list
        li.setting-form__item
                h2.setting-form__item-title Личные данные
                ul.setting-form__list
                    li.setting-form__list-item
                        input(type='text', name='name', placeholder='Имя', value='Дмитрий', disabled).setting-form__input.js-input
                        button(type='button').btn__inline.setting-form__change.js-input-change изменить
                    li.setting-form__list-item
                        input(type='text', name='surname', placeholder='Фамилия', disabled).setting-form__input.js-input
                        button(type='button').btn__inline.setting-form__change.js-input-change изменить
                    li.setting-form__list-item
                        input(type='text', name='patronymic', placeholder='Отчество', disabled).setting-form__input.js-input
                        button(type='button').btn__inline.setting-form__change.js-input-change изменить
                    li.setting-form__list-item
                        input(type='text', name='birthday', placeholder='Дата рождения', disabled).setting-form__input.js-input
                        button(type='button').btn__inline.setting-form__change.js-input-change изменить
        li.setting-form__item
                h2.setting-form__item-title Контактные данные
                ul.setting-form__list
                    li.setting-form__list-item
                        input(type='text', name='tel', placeholder='+7(___)-___-____', disabled).setting-form__input.js-input
                        button(type='button').btn__inline.setting-form__change.js-input-change изменить
                    li.setting-form__list-item
                        input(type='text', name='email', placeholder='E-mail', value='dmitriy_loginov@gmail.com', disabled).setting-form__input.js-input
                        button(type='button').btn__inline.setting-form__change.js-input-change изменить
                    li.setting-form__list-item
                        input(type='password', name='password', placeholder='Пароль [********]', disabled).setting-form__input.js-input
                        button(type='button').btn__inline.setting-form__change.js-input-change изменить
        li.setting-form__item.address
                h2.setting-form__item-title.address__title Адресная книга
                section.address__inner
                    div.address__item
                        button(type='button').btn__inline.address__change.js-change-address изменить
                        h3.address__inner-title Текущий адрес доставки
                        ul.address__list
                            li.address__list-item
                                input(type='radio', name='address-radiobtn', id='address_1', checked).radiobtn
                                label(for='address-1').radiolbl.address__list-radio-lbl 432 071 Россия, г. Троицк, ул. Ленина д.34. кв.54
                                input(type='text', name='address_1', value='432 071 Россия, г. Троицк, ул. Ленина д.34. кв.54').adress__input
                                button(type='button').btn__inline.address__del.js-delete-address удалить
                            li.address__list-item
                                input(type='radio', name='address-radiobtn', id='address_2').radiobtn
                                label(for='address_2').radiolbl.address__list-radio-lbl 445 086 Россия, г. Керчь, ул. Первого Интернационала д.14. кв.6
                                input(type='text', name='address_2', value='445 086 Россия, г. Керчь, ул. Первого Интернационала д.14. кв.6').adress__input
                                button(type='button').btn__inline.address__del.js-delete-address удалить
                        button(type='button').btn.address__btn-add Добавить еще один адрес
                    div.add-address.clearfix
                        h3.add-address__title Добавить адрес
                        div.add-address__wrapper
                            input(type='text', name='new-index', placeholder='Индекс').setting-form__input.add-address__item
                            select(name='new-country').select.add-address__item
                                option(value='', disabled, selected, hidden) Страна
                                option(value='Россия') Россия
                                option(value='Белоруссия') Белоруссия
                                option(value='Латвия') Латвия
                            select(name='new-city').select.add-address__item
                                option(value='', disabled, selected, hidden) Город
                                option(value='Россия') Москва
                                option(value='Белоруссия') Минск
                                option(value='Латвия') Рига
                        input(type='text', name='new-address', placeholder='Адрес').setting-form__input.add-address__item.add-address__item--full
                        button(type='button').btn.add-address__submit Добавить адрес
        li.setting-form__item
                h2.setting-form__item-title Подписки и уведомления
                ul.setting-form__subscript
                    li.setting-form__subscript-item
                        input(type='checkbox', name='subscription', id='subscription_1', checked).checkbox
                        label(for='subscription_1').checkboxlbl Оповещеать меня о текущих акциях по e-mail
                    li.setting-form__subscript-item
                        input(type='checkbox', name='subscription', id='subscription_2', checked).checkbox
                        label(for='subscription_2').checkboxlbl Оповещеать меня о текущих акциях по Sms                