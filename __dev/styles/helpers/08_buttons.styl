.btn 
    min-width 200px
    padding 0 5px
    line-height 28px
    color $WHITE
    background $ADD_GRAY
    border none
    border-bottom 2px solid #bcb8b6
    text-align center
    font-family Verdana, sans-serif
    font-size 12px

    &:hover,
    &:focus 
        background #e85a22
        border-bottom-color #cb4815

.btn__inline 
    font-family Verdana, sans-serif
    font-size 12px
    font-weight 300
    line-height 18px
    color $GRAY
    text-decoration underline
    cursor pointer
    border none
    background none

    &:hover
        color #e85a22    

.radiobtn 
    display none

.radiolbl 
    display block
    padding-left 27px
    cursor pointer
    font-size 12px
    line-height 17px
    position relative

    &::before
        content ''
        position absolute
        top 6px
        left 0
        width 17px
        height 17px
        background $WHITE
        border 1px solid $BORDER_GRAY
        border-radius 50%

    &::after 
        content ''
        display none
        position absolute
        top 11px
        left 5px
        width 9px
        height 9px
        border-radius 50%
        background #333333

.radiobtn:checked+.radiolbl:after 
    display block

.checkbox
    display none

.checkboxlbl
    position relative
    cursor pointer
    line-height 18px
    padding-left 28px
    font-size 14px

    &::before
        content ''
        position absolute
        top 0
        left 0
        width 18px
        height 18px
        border 1px solid $BORDER_GRAY

    &::after
        content ''
        position absolute
        top 3px
        left 4px
        display none
        width 10px
        height 5px
        border-bottom 2px solid #333333
        border-left 2px solid #333333
        transform: rotate(-45deg)

.checkbox:checked+.checkboxlbl::after
    display block   
             